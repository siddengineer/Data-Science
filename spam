      "source": [
        "import pandas as pd\n",
        "\n",
        "# Load the uploaded CSV\n",
        "data = pd.read_csv(\"spam.csv\", encoding='latin-1')  # latin-1 avoids weird character errors\n",
        "\n",
        "# Keep only the first two relevant columns\n",
        "data = data.iloc[:, [0, 1]]  # column 0 = label, column 1 = message\n",
        "data.columns = [\"label\", \"message\"]\n",
        "\n",
        "print(\"Dataset Loaded Successfully\")\n",
        "print(data.head())\n"
      ],
